
  <div class="form-goup">
    <label for="exampleInputPassword1">Email</label>
      {{input  type="email" value=emailAddress class="form-control" placeholder="email" }}
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Message</label>
    {{textarea type="text" value=message class="form-control" placeholder="your message" rows="7"}}
  </div>
  <div class="form-group">
      <button class="btn btn-success" disabled={{canSubmit}} {{action 'sendMessage'}}>Submit</button>
  </div>

{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}
