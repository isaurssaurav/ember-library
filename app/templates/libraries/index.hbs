<h3>List</h3>
{{input value=search class="form-control" placeholder="Search a keyword"}}
<hr>
<div class="row">
{{#each filteredList as |library|}}
  <div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{library.name}}</h3>
    </div>
    <div class="panel-body">
      <p>Address: {{library.address}}</p>
      <p>Phone: {{library.phone}}</p>
    </div>
    <div class="panel-footer text-right">
      {{#link-to 'libraries.edit' library.id class='btn btn-success'}}edit{{/link-to}}
      <button class="btn btn-danger" {{action 'deleteLibrary' library}}>Delete</button>
    </div>
  </div>
</div>
{{/each}}
</div>
